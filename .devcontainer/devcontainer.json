{
  "name": "Cavoke",
  "image": "ghcr.io/cavoke-project/dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker",
        "timonwong.shellcheck"
      ]
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "cmake . -B build -DUSE_EXTERNAL_DROGON=ON -DUSE_EXTERNAL_JWT=ON -DUSE_EXTERNAL_NLOHMANN=ON -DQT_MAJOR_VERSION=5 -G Ninja"
}